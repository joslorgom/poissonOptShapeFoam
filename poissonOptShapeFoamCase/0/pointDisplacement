FoamFile
{
    version     2.0;
    format      ascii;
    class       pointVectorField;
    object      pointDisplacement;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    deformedWall       
    {  
        type            fixedValue;
        value           uniform (0 0 0); 
    }

    outerWall        
    {
	//type		slip;
	type		fixedValue;
	value		uniform (0 0 0);
    }

    backAndFront           
    {
        type            empty;
    }

}

